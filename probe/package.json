{
  "name": "ghostty-webgl-probe",
  "displayName": "Ghostty WebGL Probe",
  "description": "WebGL2 feasibility probe for Ghostty-in-VSCode PoC",
  "version": "0.0.1",
  "publisher": "0xbigboss",
  "private": true,
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ghostty-probe.runAll",
        "title": "Ghostty: Run All WebGL Probes"
      },
      {
        "command": "ghostty-probe.showPanel",
        "title": "Ghostty: Show Probe Panel"
      },
      {
        "command": "ghostty-probe.startMatrixDemo",
        "title": "Ghostty: Start Matrix Demo"
      },
      {
        "command": "ghostty-probe.stopMatrixDemo",
        "title": "Ghostty: Stop Matrix Demo"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:prod",
    "compile": "tsc -p ./",
    "build": "node esbuild.config.mjs",
    "build:prod": "NODE_ENV=production node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "lint": "eslint src",
    "test": "npm run compile && npm run build && node ./out/test/runTest.js"
  },
  "dependencies": {
    "ghostty-web": "0.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.106.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.51.0"
  }
}
